$primary   = #027BE3
$secondary = #26A69A
$accent    = #9C27B0

$positive  = #21BA45
$negative  = #C10015
$info      = #31CCEC
$warning   = #F2C037

$flex-gutter ?= {
    none: 0,
    xs: 8px,
    sm: 16px,
    md: 24px,
    lg: 32px,
    xl: 40px
}

$toolbar-padding ?= 0 0
$toolbar-min-height ?= 80px
$space-base ?= 16px
$button-font-weight ?= 300

$spaces ?= {
  none: {
    x: 0,
    y: 0
  },
  xs: {
    x: 8px,
    y: 8px
  },
  sm: {
    x: 16px,
    y: 16px
  },
  md: {
    x: $space-x-base,
    y: $space-y-base
  },
  lg: {
    x: 32px,
    y: 32px
  },
  xl: {
    x: 40px,
    y: 40px
  }
}
